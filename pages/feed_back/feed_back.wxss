page {
  background-color: rgba(223, 243, 250, 1);
}

.content {
  width: 100%;
  height: 608rpx;
  box-sizing: border-box;
  padding: 64rpx 32rpx;
  background-color: rgba(255, 255, 255, 1);
}

.text_wrap {
  width: 100%;
  height: 320rpx;
  box-sizing: border-box;
  padding: 10rpx 0rpx;
  position: relative;
}

.text_wrap textarea {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.tip {
  color: rgba(153, 153, 153, 1);
  font-size: 28rpx;
  position: absolute;
  bottom: 28rpx;
  right: 0;
}

.up_img {
  width: 128rpx;
  height: 128rpx;
  margin-top: 32rpx;
}

.button {
  width: 656rpx;
  height: 88rpx;
  background: rgba(96, 234, 243, 1);
  border-radius: 8rpx;
  margin:0 auto;
  margin-top: 80rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 88rpx;
  color: rgba(255, 255, 255, 1);
}
