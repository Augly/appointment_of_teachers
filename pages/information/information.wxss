page {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 0rpx 32rpx 120rpx 32rpx;
}

.step_group {
  /* width: 500rpx; */
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  margin: 0 auto;
  margin-top: 48rpx;
}

.step {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(153, 153, 153, 1);
  font-size: 32rpx;
  color: rgba(153, 153, 153, 1);
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.step_active {
  color: rgba(255, 255, 255, 1);
  background: rgba(96, 234, 243, 1);
  border: 2rpx solid rgba(96, 234, 243, 1);
}

.line {
  width: 152rpx;
  height: 0rpx;
  border: 2rpx dashed rgba(153, 153, 153, 1);
}

.portrait_group {
  width: 192rpx;
  height: 192rpx;
  position: relative;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(204, 204, 204, 1);
  margin: 0 auto;
  margin-top: 64rpx;
}

.portrait {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.photo {
  position: absolute;
  bottom: 0;
  left: 120rpx;
  width: 48rpx;
  height: 48rpx;
  /* background-color: blue; */
}

.mintitle {
  width: 100%;
  height: auto;
