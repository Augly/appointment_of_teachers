<view class="tabWrap">
   <view class="tabItem {{tabindex==index?'tabActive':''}}" wx:for="{{tab_list}}" wx:key='index' bindtap='select_tab' data-index='{{index}}'>{{item}}</view>
</view>
<view class='content'>
  <view class='list' bindtap='to_res'>
    <view class='list_head borT'>
      <image class='head_portrait' src='http://class.zzvlm.com/timg1@2x.png'></image>
      <text class='head_name'>朱萧木</text>
      <text class='head_time'>27分钟前</text>
      <text class='head_ordel_money'>订单金额:￥100</text>
    </view>
    <view class='classInfo borT'>
      <view class='class_group'>
        <view class='class_name'>
          <text class='title'>英语</text>
          <text class='min_title'>初中一年级</text>
        </view>
        <view class='line'></view>
        <view class='class_time'>
          <text class='title'>12:00~13:00</text>
          <text class='min_title'>7-12（周四）</text>
        </view>
      </view>
      <!-- <text class='ordert_type'>老师已接单，请付款</text> -->
    </view>
    <view class='adder_list borT'>
      <text class='adder_title'>地址：天津市南开区宾水西道天穆园4栋201</text>
      <text class='adder_distance'>2.4KM</text>
    </view>
    <view class='scope_group'>
      <view class='scope_normel_button' wx:if="{{tabindex==0}}">隐藏此单</view>
      <view class='scope_normel_button' wx:if="{{tabindex==1}}">取消订单</view>
      <view class='scope_normel_button button_active' wx:if="{{tabindex==0}}">立即接单</view>
      <view class='scope_normel_button button_active' wx:if="{{tabindex==1}}" catchtap='dk'>打卡工作</view>
    </view>
  </view>
</view>

<view class='mask' bindtap='hidemask' wx:if="{{mask}}">
  <block wx:if="{{type==1}}">
    <image src='http://class.zzvlm.com/3786@2x.png' class='mask_logo'></image>
    <view class='mask_title'>您还没接单权限哦，完成信息认证后平台将向您免费派单</view>
    <view class='mask_buttom'>立即认证</view>
  </block>
 <block wx:if="{{type==2}}">
    <image src='http://class.zzvlm.com/3785@2x.png' class='mask_logo'></image>
    <view class='mask_title'>正在验证…</view>
  </block>
  <block wx:if="{{type==3}}">
    <image src='http://class.zzvlm.com/3838@2x.png' class='mask_logo'></image>
    <view class='mask_title'>缴纳押金并开始接单</view>
    <view class='mask_title' style='margin-top:10rpx'>完善资料用户可获低押金权限</view>
    <view class='mask_buttom'>立即缴纳</view>
    <view class='mask_buttom mask_sure' catchtap='wszl'>完善资料</view>
  </block>
  <block wx:if="{{type==4}}">
    <view class='dk_wrap'>
      <view class='imgRes'>
        <image class='phone' src='http://class.zzvlm.com/pgon3834@2x.png'></image>
      </view>
      <text class='dk_title'>打卡工作</text>
      <text class='dk_mintitle'>上传相关照片确认打卡</text>
      <view class='mask_buttom' catchtap='up_ok'>立即上传</view>
    </view>
  </block>
</view>