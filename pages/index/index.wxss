}

.w450 {
  width: 420rpx;
}

.icon-arr-right-red {
  margin-left: auto;
}

.minTab {
  line-height: 48rpx;
  padding: 0rpx 28rpx;
  border: 2rpx solid rgba(104, 227, 245, 1);
  font-size: 32rpx;
  color: rgba(96, 234, 243, 1);
  /* background:linear-gradient(270deg,rgba(123,235,221,1) 0%,rgba(104,227,245,1) 100%); */
