  text-align: center;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
}

.broadcast {
  width: 624rpx;
  height: 56rpx;
  background: rgba(223, 243, 250, 1);
  opacity: 1;
  border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 32rpx;
