  padding: 0rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.icon-guangbo{
  font-size: 26rpx;
  color: rgba(96, 234, 243, 1);
}
.broadWrap{
  width: 540rpx;
  height: 100%;
  /* background-color: red; */
}

.mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mask_content{
  width: 600rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.mask_iconfont{
  font-size: 60rpx;
  color: white;
}
.mask_img{
  width: 100%;
  height: 760rpx;
}