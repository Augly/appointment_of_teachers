}

.info_res {
  width: 50%;
  height: auto;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.info_top {
  display: flex;
  align-items: center;
}

.info_val {
  width: 144rpx;
  height: 144rpx;
}

.res_name {
  color: rgba(44, 44, 44, 1);
  font-size: 40rpx;
}

.res_rz {
  width: 102rpx;
  height: 32rpx;
  margin-left: 14rpx;
}

.info_mintitle {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 6rpx;
}

.class {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  overflow: hidden;
}

.class_title {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  /* border-bottom: 2rpx solid rgba(96, 234, 243, 1); */
}

.class_mintitle {
  font-size: 26rpx;
  color: rgba(255, 153, 73, 1);
  margin-left: auto;
}

.icon-arr-right-red {
  font-size: 26rpx;
  color: rgba(255, 153, 73, 1);
  margin-left: 14rpx;
  line-height: 26rpx;
}

.class_logo {
  width: 52rpx;
  height: 48rpx;
}

.class_title_name {
  font-size: 32rpx;
  color: rgba(96, 234, 243, 1);
  margin-left: 12rpx;
}

.class_kind {
  padding: 30rpx 0rpx;
}

.kind_list {
  width: 144rpx;
  height: 64rpx;
  border: 2rpx solid rgba(96, 234, 243, 1);
  border-radius: 4rpx;
  font-size: 26rpx;
  color: rgba(44, 44, 44, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  margin-right: 16rpx;
  float: left;
}

.evaluate_list {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  border-top: 2rpx solid rgba(96, 234, 243, 1);
}

.list_head {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
}

.list_head_val {
  width: 32rpx;
  height: 32rpx;
}

.list_head_name {
  font-size: 24rpx;
  color: rgba(44, 44, 44, 1);
  margin-left: 4rpx;
}

.icon-xingxing {
  font-size: 16rpx;
  color: rgba(255, 153, 73, 1);
  margin-right: 8rpx;
}

.ml {
  margin-left: auto;
}

.list_head_time {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  margin-left: 5rpx;
}

.list_res {
  color: rgba(153, 153, 153, 1);
  font-size: 26rpx;
  margin-top: 16rpx;
}

.button_group {
  width: 100%;
  height: 182rpx;
  background: RGBA(223, 243, 250, 1);
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button_left {
  width: 272rpx;
  height: 72rpx;
  background: rgba(96, 234, 243, 1);
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 72rpx;
}

.button_right {
  width: 272rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(96, 234, 243, 1);
  margin-left: 48rpx;
  font-size: 30rpx;
  color: rgba(96, 234, 243, 1);
  text-align: center;
  line-height: 72rpx;
}

.head_group {
  width: 208rpx;
  height: 208rpx;
  position: absolute;
  top: -104rpx;
  border-radius: 50%;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.res_group {
  position: absolute;
  right: 0;
  top: -104rpx;
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
  display: flex;
  align-items: center;
}

.icon-arr-right-red {
  font-size: 26rpx;
  line-height: 30rpx;
  color: rgba(102, 102, 102, 1);
}

.user_info_group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.user_name {
  font-size: 36rpx;
  color: rgba(44, 44, 44, 1);
  margin-top: 100rpx;
}

.tab_group {
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}

.tab_item {
  height: 40rpx;
  line-height: 40rpx;
  padding: 0rpx 16rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
  color: rgba(255, 255, 255, 1);
  background-color: rgba(96, 234, 243, 1);
}
