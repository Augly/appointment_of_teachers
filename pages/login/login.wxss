page {
  position: relative;
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: RGBA(217, 243, 248, 1);
}

.ipt_group {
  width: 416rpx;
  height: 76rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(96, 234, 243, 1);
  font-size: 32rpx;
  box-sizing: border-box;
  padding: 0rpx 15rpx;
  margin-top: 20rpx;
  text-align: center;
}

.colorBlue {
  color: rgba(96, 234, 243, 1);
}

.button {
  width: 417rpx;
  height: 75rpx;
  background: linear-gradient(90deg, rgba(104, 227, 245, 1) 0%, rgba(123, 235, 221, 1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  margin-top: 152rpx;
}
